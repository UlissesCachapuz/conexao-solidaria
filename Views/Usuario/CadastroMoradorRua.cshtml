@model List<Usuario>
@{
    ViewData["Title"] = "Lista de moradores cadastrados";
}
<h1>@ViewData["Title"]</h1>

<a asp-controller="Usuario" asp-action="CadastrarMoradorRua" class="btn btn-primary">
    Cadastrar novo
</a>
<br /><br />
<table class="table table-bordered">
    <thead>

        <tr>
            <th>Nome</th>
            <th>Data nascimento</th>
            <th>Telefone</th>
            <th>Excluir</th>
            <th>Editar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.NomeCompleto</td>
                <td>@u.DataNascimento</td>
                <td>@u.TelefoneCelular</td>
                <td><a asp-controller="Usuario" asp-action="Excluir" asp-route-id="@u.Id" class="btn btn-danger" onclick="return confirm('Deseja realmente excluir?');">
                        Excluir
                    </a></td>
                <td><a asp-controller="Usuario" asp-action="Editar" asp-route-id="@u.Id" class="btn btn-warning">
                        Editar
                    </a></td>
            </tr>
        }
    </tbody>
</table>
